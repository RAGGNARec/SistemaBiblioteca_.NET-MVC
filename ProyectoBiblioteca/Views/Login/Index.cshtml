
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sistema Biblioteca</title>
    @Styles.Render("~/Content/css")
    <style>

        
    </style>
</head>



<body class="bg-gradient-primary">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center mt-5">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-2">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-md-8 col-lg-7 col-xl-6">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
                            </div>
                            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 d-flex align-items-center">
                                <form class="p-5" action="@Url.Action("Index","Login")" method="post">
                                    <!-- Welcome Message -->
                                    <h3 class="text-center mb-4">Bienvenido al sistema de biblioteca</h3>
                                    <!-- Error Message -->
                                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.Error
                                        </div>
                                    }
                                    <!-- Email input -->
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" name="correo" id="form1Example13" placeholder="Correo electrónico" value="adminchasquisoft@gmail.com">
                                    </div>
                                    <!-- Password input -->
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user" name="clave" id="form1Example23" placeholder="Contraseña" value="admin">
                                    </div>
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-block btn-user">INGRESAR</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
